<!DOCTYPE html>
<html id="<%= params[:controller].parameterize %>_controller">
<head>
  <title>OregonSkateparks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>

  <div class="container">
    <div>
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible center" role="alert">
          <%= flash[:notice] %> <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible center" role="alert">
          <%= flash[:alert] %> <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
        </div>
      <% end %>
    </div>

    <%= yield %>

  </div>
</body>
</html>
