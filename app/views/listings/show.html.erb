<div class="content-container">
  <div class="primary">
    <h1><%= @listing.name %></h1>
    <p><%= @listing.description %></p>

    <h2>Photos</h2>
    <div class="row photos">
      <%= render @listing.photos %>
    </div>

    <%= link_to new_listing_photo_path(@listing), id: "add-photo", class: "btn btn-primary btn-block", remote: true do %>
      <span class="glyphicon glyphicon-camera"></span>Add a Photo
    <% end %>

    <h2>Reviews</h2>
    <div class="reviews list-group">
      <%= render @reviews %>
    </div>
      <%= link_to new_listing_review_path(@listing), id: "add-review", class: "btn btn-primary btn-block", remote: true do %>
      <span class="glyphicon glyphicon-pencil"></span>Add a Review
    <% end %>
  </div>

  <div class="secondary">
    <div class="address">
      <h2>Address</h2>
      <address>
        <strong><%= @listing.name %></strong><br>
        <%= @listing.street %><br>
        <%= @listing.city %>, <%= @listing.state %><br>
        <%= @listing.zip %><br>
      </address>
    </div>

    <% if can? :create, @listing %>
    <div class="admin">
      <%= link_to "Edit Park", edit_listing_path(@listing), class: "btn btn-info btn-block" %>
      <%= link_to "Delete", listing_path(@listing), data: {confirm: "You sure?", method: "delete"}, class: "btn btn-danger btn-block" %>
    </div>
    <% end %>
  </div>
</div>
