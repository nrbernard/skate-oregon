<div class="photo-form">
  <h3>Add a photo of <%= @listing.name %>:</h3>
  <%= form_for [@listing, @photo], html: {:multipart => true, class: "form", id: "new-photo"}, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <%= f.submit "Add Photo", class: "btn btn-primary" %>
  <% end %>
</div>
